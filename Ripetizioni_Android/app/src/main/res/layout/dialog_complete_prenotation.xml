<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454545">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="436dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="371dp"
        android:layout_height="99dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/single_item_title"
            android:layout_width="128dp"
            android:layout_height="38dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Giorno:"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_day_picker"
            android:layout_width="243dp"
            android:layout_height="48dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="Giorno"
            android:spinnerMode="dropdown"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="370dp"
        android:layout_height="104dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/single_item_description"
            android:layout_width="128dp"
            android:layout_height="38dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Orario"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_time_picker"
            android:layout_width="243dp"
            android:layout_height="48dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="Orario"
            android:spinnerMode="dropdown"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="97dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="128dp"
            android:layout_height="38dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Insegnante"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_teacher_picker"
            android:layout_width="243dp"
            android:layout_height="48dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="Giorno"
            android:spinnerMode="dropdown"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#970707"
            android:text="Indietro" />

        <Button
            android:id="@+id/btn_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#2C7304"
            android:text="Prenota" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>